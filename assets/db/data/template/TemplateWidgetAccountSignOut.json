{
  "flutterType": "Column",
  "onStateDataUpdate": true,
  "crossAxisAlignment": "start",
  "children": [
    {
      "flutterType": "Container",
      "margin": "5,0,22,20",
      "child": {
        "flutterType": "Text",
        "label": "Личная информация",
        "style": {
          "flutterType": "TextStyle",
          "fontSize": 17,
          "fontWeight": "bold",
          "color": "schema:secondary"
        }
      }
    },
    {
      "ChildrenExtension": "Iterator",
      "theme": "ButtonGroup",
      "dataType": "list",
      "list": [
        {
          "label": "${storage(mail)|partHideEmail()}",
          "iconSrc": "mail_outline",
          "iconSize": 20,
          "templateWidgetSrc": "Text",
          "templateArguments": [
            "label"
          ]
        },
        {
          "label": "Всегог загружено данных",
          "labelStatistic": "${state(countAllData)}",
          "templateWidgetSrc": "TextStatistic",
          "templateArguments": [
            "labelStatistic"
          ]
        },
        {
          "label": "Личная информация/ ожидает",
          "labelStatistic": "${state(countPersonData)}/${state(countNotSyncData)}",
          "templateWidgetSrc": "TextStatistic",
          "templateArguments": [
            "labelStatistic"
          ]
        },
        {
          "label": "Последняя синхронизация",
          "labelStatistic": "${storage(lastSync,0)|timeSoFar(dd.MM.yyyy HH:mm:ss)}",
          "templateWidgetSrc": "TextStatistic",
          "templateArguments": [
            "labelStatistic"
          ]
        }
      ]
    },
    {
      "flutterType": "SizedBox",
      "height": 20
    },
    {
      "ChildrenExtension": "Iterator",
      "theme": "ButtonGroup",
      "dataType": "list",
      "list": [
        {
          "label": "Выйти из аккаунта",
          "iconSrc": "exit_to_app",
          "iconSize": 20,
          "iconColor": "schema:inversePrimary",
          "templateWidgetSrc": "Text",
          "textAlign": "center",
          "onTap": {
            "sysInvoke": "Alert",
            "args": {
              "confirmRemove": true,
              "actionLabel": "Выйти",
              "backgroundColor": "schema:onBackground",
              "onPressed": {
                "jsInvoke": "Account.js",
                "args": {
                  "includeStateAll": true,
                  "switch": "Logout"
                }
              }
            }
          }
        }
      ]
    }
  ]
}