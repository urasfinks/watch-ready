{
  "flutterType": "Scaffold",
  "appBar": {
    "flutterType": "AppBar",
    "centerTitle": false,
    "title": {
      "flutterType": "Text",
      "label": "${pageArgs(windowLabel,)}",
      "textAlign": "left",
      "style": {
        "flutterType": "TextStyle",
        "fontSize": 17
      }
    }
  },
  "body": {
    "flutterType": "SafeArea",
    "child": {
      "flutterType": "Column",
      "children": [
        {
          "flutterType": "SizedBox",
          "height": 20
        },
        {
          "flutterType": "Text",
          "onStateDataUpdate": true,
          "onStateDataUpdateKey": "sw",
          "label": "${state(sw,index1,1)}/${state(sw,size,0)}",
          "textAlign": "center",
          "style": {
            "flutterType": "TextStyle",
            "fontWeight": "bold",
            "fontSize": 14
          }
        },
        {
          "flutterType": "SizedBox",
          "height": 20
        },
        {
          "flutterType": "LinearProgressIndicator",
          "onStateDataUpdate": true,
          "state": "sw",
          "value": "${state(sw,prc1,0)}",
          "backgroundColor": "schema:primaryContainer",
          "color": "schema:onPrimary",
          "semanticsLabel": "semanticsLabel",
          "semanticsValue": "semanticsValue"
        },
        {
          "flutterType": "SizedBox",
          "height": 20
        },
        {
          "flutterType": "Stream",
          "controller": "ControllerListener3",
          "stream": {
            "case": "ControllerListener",
            "controller": "sw"
          },
          "child": {
            "flutterType": "Row",
            "children": [
              {
                "flutterType": "Container",
                "width": 50,
                "height": 35,
                "decoration": {
                  "flutterType": "BoxDecoration",
                  "_color": "${context(overlayDirection,none)|map(left,red,schema:onBackground)}",
                  "color": "schema:onBackground",
                  "borderRadius": "0,15,15,0"
                },
                "child": {
                  "flutterType": "Center",
                  "child": {
                    "flutterType": "Text",
                    "label": "${state(sw,swiped.left,0)}",
                    "style": {
                      "flutterType": "TextStyle",
                      "color": "${context(overlayDirection,none)|map(left,white,schema:primary)}",
                      "fontWeight": "bold",
                      "fontSize": 14
                    }
                  }
                }
              },
              {
                "flutterType": "Expanded"
              },
              {
                "flutterType": "Container",
                "width": 50,
                "height": 35,
                "decoration": {
                  "flutterType": "BoxDecoration",
                  "_color": "${context(overlayDirection,none)|map(right,schema:projectPrimary,schema:onBackground)}",
                  "color": "schema:onBackground",
                  "borderRadius": "15,0,0,15"
                },
                "child": {
                  "flutterType": "Center",
                  "child": {
                    "flutterType": "Text",
                    "label": "${state(sw,swiped.right,0)}",
                    "style": {
                      "flutterType": "TextStyle",
                      "color": "${context(overlayDirection,none)|map(right,white,schema:primary)}",
                      "fontWeight": "bold",
                      "fontSize": 14
                    }
                  }
                }
              }
            ]
          }
        },
        {
          "flutterType": "Expanded",
          "child": {
            "flutterType": "Container",
            "width": "infinity",
            "padding": 20,
            "child": {
              "flutterType": "SwipableStack",
              "onStateDataUpdate": true,
              "onStateDataUpdateKey": "card",
              "state": "sw",
              "setStateOnInit": true,
              "setStateOnSwipeCompleted": true,
              "roll": false,
              "viewFraction": 0,
              "directions": [
                "left",
                "right"
              ],
              "overlay": {
                "flutterType": "Opacity",
                "opacity": "${state(sw,overlayOpacity)}",
                "child": {
                  "flutterType": "Row",
                  "mainAxisAlignment": "${state(sw,overlayDirection)|map(right,end,left,start,center)}",
                  "crossAxisAlignment": "start",
                  "children": [
                    {
                      "flutterType": "Container",
                      "width": 80,
                      "height": 44,
                      "margin": 10,
                      "decoration": {
                        "flutterType": "BoxDecoration",
                        "color": "${state(sw,overlayDirection)|map(right,schema:projectPrimary,left,red,schema:background)}",
                        "borderRadius": 10
                      },
                      "child": {
                        "flutterType": "Center",
                        "child": {
                          "flutterType": "Text",
                          "label": "${state(sw,overlayDirection)|map(right,Знаю,left,Не знаю)}"
                        }
                      }
                    }
                  ]
                }
              },
              "children": [
                {
                  "ChildrenExtension": "Iterator",
                  "dataType": "state",
                  "state": "card",
                  "key": "card"
                }
              ],
              "onSwipeCompleted": {
                "jsInvoke": "Less.js",
                "args": {
                  "includeAll": true,
                  "switch": "onSwipeCompleted"
                }
              },
              "onFinish": {
                "jsInvoke": "Less.js",
                "args": {
                  "includeAll": true,
                  "switch": "onFinish"
                }
              }
            }
          }
        },
        {
          "flutterType": "Padding",
          "padding": "23,0,23,0",
          "child": {
            "flutterType": "Row",
            "color": "blue",
            "width": "infinity",
            "children": [
              {
                "flutterType": "Button",
                "height": 44,
                "backgroundColor": "transparent",
                "onPressed": {
                  "jsInvoke": "Less.js",
                  "args": {
                    "includeAll": true,
                    "switch": "prev"
                  }
                },
                "child": {
                  "flutterType": "Icon",
                  "src": "undo",
                  "color": "schema:primary"
                }
              },
              {
                "flutterType": "SizedBox",
                "width": 20
              },
              {
                "flutterType": "Expanded",
                "child": {
                  "flutterType": "Text",
                  "textAlign": "center",
                  "label": "Коснитесь карточки, что бы перевернуть её",
                  "style": {
                    "flutterType": "TextStyle",
                    "color": "schema:primary|opacity(0.5)"
                  }
                }
              },
              {
                "flutterType": "SizedBox",
                "width": 20
              },
              {
                "flutterType": "Container",
                "onStateDataUpdate": true,
                "onStateDataUpdateKey": "speech",
                "child": {
                  "flutterType": "AudioButton",
                  "autoPlayOnLoad": "false",
                  "key": "AudioButton${state(speech,speech)}",
                  "type": "db",
                  "uuid": "${state(speech,speech)}",
                  "currentRenderTemplateList": [
                    "key",
                    "uuid",
                    "autoPlayOnLoad"
                  ]
                }
              }
            ]
          }
        },
        {
          "flutterType": "SizedBox",
          "height": 20
        }
      ]
    }
  }
}